model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  email     String   @unique
  name      String
  role      Role     @default(USER)
  pass      Pass?
  refresh   String?
}

model Pass {
  id       String @id @default(cuid())
  user_id  String @unique
  password String
  user     User   @relation(fields: [user_id], references: [id])

  @@unique([user_id, password])
}

enum Role {
  USER
  ADMIN
}
